/* pages/read-detail/read-detail.wxss */
.top-container {
  display: flex;
  flex-direction: column;
}

.auther-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0 0 30rpx;
}

.head-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.head-image {
  width: 100%;
}

.music-play {
  width: 100rpx;
  position: absolute;
  z-index: 99;
  align-items: center;
  opacity: 0.7;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.auth-text {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  margin-left: 25rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  margin-top: 30rpx;
  margin-left: 20rpx;
  letter-spacing: 2px;
}

.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.button-flex {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 660rpx;
}

.collect-button,
.share-button {
  width: 90rpx;
  height: 90rpx;
}

.share-button {
  margin-right: 32rpx;
}

.button-line {
  height: 1px;
  width: 660rpx;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -99;
}

.desc {
  margin: 20rpx 30rpx 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  color: #666;
}