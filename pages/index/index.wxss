/* pages/index.wxss */
view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  margin-top: 160rpx;
}

image,
.blue-text,
.long-text {
  margin-top: 50rpx;
}

image {
  width: 200rpx;
  height: 200rpx;
  vertical-align: bottom;
}

.blue-text,
.long-text {
  color: pink;
  border: solid 2rpx blue;
  border-radius: 10rpx;
}

.long-text {
  border: dashed 2rpx yellow;
  text-decoration: line-through;
}

.horizontal-view {
  display: flex;
  flex-direction: row;
}

.button-view {
  width: 300rpx;
  height: 80rpx;
  border: solid 2rpx white;
  border-radius: 10rpx;
  align-items: center;
  margin-top: 120rpx;
}

.button-text {
  line-height: 80rpx;
  font-size: 30rpx;
  color: pink;
  font-family: cursive;
}

